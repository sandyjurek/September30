@model CalculatorInputViewModel

@{
    ViewData["Title"] = "Calculator Page";
}

    <div class="text-center">
        <h1 class="display-4">Welcome to Sandy's Calculator Page</h1>

        <div class="form-group">
            <form asp-action="CalculateResult">
                <label>Input One</label>
                <input asp-for="@Model.InputOne" />
                <label>Action</label>
                <input asp-for="@Model.Action" />
                <label>Action</label>
                <select asp-for="@Model.Action" asp-items="Html.GetEnumSelectList<CalculatorType>()"></select>
                <input type="submit" value="Calculate" class="btn btn-primary" />
            </form>
        </div>

    </div>
